<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>0.1.1</Version>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Company>Square Hole Interactive</Company>
    <Authors>んなあぁ</Authors>
    <Description>Simple .NET library to send notifications to XSOverlay via UDP.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/nnaaa-vr/XSNotifications</PackageProjectUrl>
    <RepositoryUrl>https://github.com/nnaaa-vr/XSNotifications</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <NeutralLanguage>en</NeutralLanguage>
    <PackageTags>SteamVR, OpenVR, XSOverlay</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="system.drawing.common" Version="5.0.2" />
    <PackageReference Include="System.Text.Json" Version="5.0.1" />
  </ItemGroup>

</Project>
